<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tool_bar"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/tool_left_icon"
        android:layout_width="50dp"
        android:src="@drawable/tool_back_arrow"
        android:layout_height="match_parent"
        android:padding="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:text="@string/title_home"
        android:id="@+id/tool_title"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="DONE"
        android:visibility="gone"
        android:layout_gravity="right"
        android:id="@+id/tool_right_icon"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/catsound_back_selected"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/tool_home"
        android:layout_width="50dp"
        android:layout_gravity="right"
        android:src="@drawable/video_home_icon"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:padding="12dp" />

</androidx.cardview.widget.CardView>