<?xml version="1.0" encoding="utf-8"?>
<com.codexial.photomodule.apputils.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_7sdp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSelectPhotoList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivRemovePhoto"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_3sdp"
                android:background="@drawable/custom_circle_remove"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_close"
                android:visibility="visible"
                app:tint="@color/colorImageTint" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</com.codexial.photomodule.apputils.SquareRelativeLayout>