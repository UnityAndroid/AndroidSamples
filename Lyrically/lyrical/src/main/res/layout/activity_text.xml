<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/text_select_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />


    <RelativeLayout
        android:id="@+id/text_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/text_select_back_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="15dp" />


        <RelativeLayout
            android:id="@+id/text_done_rl"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/text_done_back"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="DONE"
                android:textColor="#ffffff"
                android:textSize="12dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Text Editor"
            android:textColor="#fff"
            android:textSize="15dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/text_toolbar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/text_edit_back">

        <EditText
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/text_pencil"
            android:background="@android:color/transparent"
            android:gravity="left|center"
            android:hint="Enter name"
            android:paddingLeft="20dp"
            android:shadowRadius="10"
            android:singleLine="true"
            android:text=""
            android:textColor="#fff"
            android:textColorHint="#ffffff"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/text_pencil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/text_pencil_back"
            android:padding="10dp"
            android:src="@drawable/text_pencil" />
    </RelativeLayout>
</RelativeLayout>